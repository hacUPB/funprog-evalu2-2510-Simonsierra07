#include <stdio.h>
#include <math.h>

int main() {
    float a, b, c;

  
    printf("Ingrese el valor del cateto 1 (a): ");
    scanf("%f", &a);
    printf("Ingrese el valor del cateto 2 (b): ");
    scanf("%f", &b);

     
    c = sqrt(pow(a, 2) + pow(b, 2));

 
    printf("La hipotenusa es: %.2f\n", c);

    return 0;
}

